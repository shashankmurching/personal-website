{
    "env": {
        "browser": true,
        "es6": true
    },    
    "extends": [
        "react-app",
        "airbnb",
        "plugin:jsx-a11y/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },    
    "plugins": [
        "react",
        "jsx-a11y"
    ],
    "rules": {
        "semi": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/jsx-props-no-spreading": "off",
        "no-shadow": "off",
        "global-require": "off"
    },
    "settings": {
        "react": {
          "version": "detect"
        }
    }    
}